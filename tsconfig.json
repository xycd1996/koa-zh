{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist", // TS文件编译后会放入到此文件夹内
    "baseUrl": ".",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "paths": {
      "*": ["node_modules/*", "app/types/*"]
    }
  },
  "include": ["app/**/*"]
}
